@*@inject IParameterFilters Filters*@

@if (Column == SortColumn)
{
    <span>@SortSymbol</span>
}
else
{
    <span>&nbsp;</span>
}
@code {
    /// <summary>
    /// Sets which <see cref="ApplicationFilterColumns"/> this indicator is for.
    /// </summary>
    [Parameter]
    public ApplicationFilterColumns Column { get; set; }

    [Parameter]
    public ApplicationFilterColumns SortColumn { get; set; }

    [Parameter]
    public bool SortAscending { get; set; }

    /// <summary>
    /// The symbol to render.
    /// </summary>
    private string SortSymbol => SortAscending ? "🔼" : "🔽";
}
