@inject IBaseFilters Filters

@if (Column == Filters.SortColumn)
{
    <span>@SortSymbol</span>
}
else
{
    <span>&nbsp;</span>
}
@code {
    /// <summary>
    /// Sets which <see cref="ApplicationFilterColumns"/> this indicator is for.
    /// </summary>
    [Parameter]
    public ApplicationFilterColumns Column { get; set; }

    /// <summary>
    /// The symbol to render.
    /// </summary>
    private string SortSymbol => Filters.SortAscending ? "🔼" : "🔽";
}
