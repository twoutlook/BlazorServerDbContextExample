@*@inject IAppFilters Filters*@

@if (Column == SortColumn)
{
    <span>@SortSymbol</span>
}
else
{
    <span>&nbsp;</span>
}
@code {
    /// <summary>
    /// Sets which <see cref="AppFilterColumns"/> this indicator is for.
    /// </summary>
    [Parameter]
    //public AppFilterColumns Column { get; set; }
    public string Column { get; set; }


    [Parameter]
    public string SortColumn { get; set; }

    [Parameter]
    public bool SortAscending { get; set; }

    /// <summary>
    /// The symbol to render.
    /// </summary>
    private string SortSymbol => SortAscending ? "🔼" : "🔽";
}
