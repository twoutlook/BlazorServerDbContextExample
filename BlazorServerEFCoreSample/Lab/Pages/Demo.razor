@page "/demo"

<h1> demo auto grid</h1>

<GridAutoComponent Items="employees"
                   ColumsToExcludeCSV="id,title"
                   CssClass="table-bordered"></GridAutoComponent>

@code {

    private List<Employee> employees;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        employees = new List<Employee>();
        employees.AddRange(
            new Employee[3]
            {
                new Employee{Id=1, Name="陳一大",Title="Manager", Department="Admin"},
                new Employee{Id=1, Name="林二水",Title="Supervisor", Department="HR"},
                new Employee{Id=1, Name="李三思",Title="Deveoper", Department="IT"},

                }
            );


    }

    public class Employee
    {
        public int Id { get; set; }
        public string Name { get; set; }
        public string Title { get; set; }
        public string Department { get; set; }
    }
}
